    <br>
    <h1>User DataBase</h1>
    <main>
        <table>
            <thead>
                <tr>
                    <th>Id No.</th>
                    <th>Password</th>
                    <th>Name</th>
                    <th>Date Of Birth</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Gender</th>
                    <th>Type</th>
                    <th>Update Details</th>
                    <th>Delete User</th>
                </tr>
            </thead>
            <tbody>
                {{#each entries2 as |item|}}
                    <tr>
                        <td>{{item.idno}}</td>
                        <td>{{item.password}}</td>
                        <td>{{item.name}}</td>
                        <td>{{item.dob}}</td>
                        <td>{{item.email}}</td>
                        <td>{{item.phone}}</td>
                        <td>{{item.gender}}</td>
                        <td>{{item.type}}</td>
                        <td>
                            <form action="/personnel/updaterec" method="POST">
                                <input type="text" name="idno" value="{{item.idno}}" hidden>
                                <input type="submit" value="Update Details">
                            </form>
                        </td>
                        <td>
                            <form action="/personnel/deleterecord" method="POST">
                                <input type="text" name="idno" value="{{item.idno}}" hidden>
                                <input type="submit" value="Delete User">
                            </form>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </main>

