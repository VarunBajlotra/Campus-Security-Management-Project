    <br>
    <div class="main">

        <div class="container">
            <form action="/personnel/adduser" method="POST" class="appointment-form" id="appointment-form">
                <h2>Add User to Database</h2>
                <div class="form-group-1">
                    <input type="text" name="idno" id="idno" placeholder="ID No." required />
                    <input type="text" name="name" id="name" placeholder="Name" required />
                    <input type="password" name="password" id="password" placeholder="Password" required />
                    <label for="dob" style="color: black;">Date of Birth</label>
                    <input type="date" name="dob" id="dob" placeholder="Date of Birth" required />
                    <input type="email" name="email" id="email" placeholder="Email" required />
                    <input type="number" name="phone" id="phone" placeholder="Phone No." required />
                    <div style="color: black;">
                        Gender : &nbsp;&nbsp;<input type="radio" name="gender" id="male" value="Male" ><label for="male">&nbsp;&nbsp;Male</label>&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="radio" name="gender" id="female" value="Female"><label for="female">&nbsp;&nbsp;Female</label>
                    </div>
                    <div style="color: black;">
                        Type
                        <select name="type" id="type">
                            <option value="personnel">Personnel</option>
                            <option value="student">Student</option>
                            <option value="staff">Staff</option>
                        </select>
                    </div>
                </div>
                <div class="form-check">
                    <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                    <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree to the  <a href="#" class="term-service">Terms and Conditions</a></label>
                </div>
                <div class="form-submit">
                    <input type="submit" name="submit" id="submit" class="submit" value="Add User" />
                </div>
            </form>
        </div>

    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- JS -->
    <script src="../../personnel/adduser/vendor/jquery/jquery.min.js"></script>
    <script src="../../personnel/adduser/js/main.js"></script>
    <script>
        $(()=>{
            $.get('/user',(res)=>{
                console.log(res)
                $('#person').append(res)
            })
        })
    </script>
</body>
