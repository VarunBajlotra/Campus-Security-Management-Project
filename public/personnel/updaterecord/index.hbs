            </li>
        </ul>
        </div>
    </nav>

    <br>
    <div class="main">

        <div class="container">
            <form action="/personnel/updaterecord" method="POST" class="appointment-form" id="appointment-form">
                <h2>Update User Details</h2>
                <div class="form-group-1" style="color: black;">
                    <label for="idno">ID No.</label>
                    <input type="text" name="idno" id="idno" value="{{entry.idno}}" required />

                    <label for="name">Name</label>
                    <input type="text" name="name" id="name" value="{{entry.name}}" required />

                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" value="{{entry.password}}" required />

                    <label for="dob">Date of Birth</label>
                    <input type="date" name="dob" id="dob" value="{{entry.dob}}" required />

                    <label for="email">Email</label>
                    <input type="email" name="email" id="email" value="{{entry.email}}" required />

                    <label for="phone">Phone No.</label>
                    <input type="number" name="phone" id="phone" value="{{entry.phone}}" required />

                    <div style="color: black;">
                        Gender : &nbsp;&nbsp;<input type="radio" name="gender" id="male" value="Male" ><label for="male">&nbsp;&nbsp;Male</label>&nbsp;&nbsp;&nbsp;&nbsp;
                        <input type="radio" name="gender" id="female" value="Female"><label for="female">&nbsp;&nbsp;Female</label>
                    </div>

                    <div style="color: black;">
                        <label for="type">Type</label>
                        <select name="type" id="type">
                            <option value="{{entry.type}}" hidden selected>{{entry.type}}</option>
                            <option value="personnel">Personnel</option>
                            <option value="student">Student</option>
                            <option value="staff">Staff</option>
                        </select>
                    </div>
                </div>
                <div class="form-submit">
                    <input type="submit" name="submit" id="submit" class="submit" value="Update User" />
                </div>
            </form>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- JS -->
    <script src="../../personnel/updaterecord/vendor/jquery/jquery.min.js"></script>
    <script src="../../personnel/updaterecord/js/main.js"></script>
    <script>
        if('{{entry.gender}}'=='Female'){
            $('#female').attr('checked','checked')
        }
        else if('{{entry.gender}}'=='Male'){
            $('#male').attr('checked','checked')
        }
        $(()=>{
            $.get('/user',(res)=>{
                console.log(res)
                $('#person').append(res)
            })
        })
    </script>
</body>
